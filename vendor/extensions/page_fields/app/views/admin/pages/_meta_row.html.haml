%tr
  %th.label
    %label{:for=>"page_#{meta_row[:field]}"}= t(meta_row[:field])
  %td.field
    = f.send(meta_row[:type], meta_row[:field], *meta_row[:args])
  %td.actions
    - if meta_row_counter+1 == @meta.size
      - link_to '#add_field_popup', :class=>'popup' do
        = image 'plus_grey', :alt => t('add field')
