%div{:style => 'display:none'}
  - form_tag new_admin_page_url, :id => 'new_page_form', :method => 'get' do
    %table
      %tr
        %th= label_tag 'page_title', 'Titulek stránky'
        %td= text_field_tag 'page_title', '', :size => 40
      %tr
        %th= label_tag 'page_type', 'Typ stránky'
        - options = Page.descendants.map { |p| [p.display_name, p.name] if p.type_for_editor? }.compact.sort_by { |p| p.first }
        %td= select_tag 'page_type', options_for_select([[t('select.normal'), '']] + options)
    %p
      = submit_tag 'Vytvořit'
      nebo
      = link_to_function 'Storno', 'Modalbox.hide("new_page_form")'