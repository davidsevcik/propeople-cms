#translations
  %h3 Překlady 
  %ol#translation_list
    - @sites.each do |site|
      - unless @page.site == site
        %li
          %strong= @languages[site.language] + ': '
          - translation = @page.translation_for_site(site)
          - if translation
            = link_to(translation.title, edit_admin_page_path(translation))
          - else
            neexituje
            = link_to('Založit', {:action => :translate_page, :id => @page.id, :language => site.language}, :method => :post) 
