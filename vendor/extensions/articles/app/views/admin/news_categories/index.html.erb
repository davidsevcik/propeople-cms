<%= render :partial => "#{File.dirname(__FILE__)}/../menu.html.erb" %>
<h1>Categories</h1>
<% if @news_categories.blank? %>
  <p>No categories in database </p>
<% else %>
<u1>
    <table  class="index" >
       <% @news_categories.each do |tag| %>
         <tr  class="node level-0">
           <td class="page"><%= link_to  tag.name, { :action => 'edit', :id => tag.id } %></td>
           <td class="remove"><%= link_to image('remove', :alt => 'Remove News'), remove_admin_news_category_url(:id => tag.id) %></td>
         </tr>
      <%end%>
    </table>
</u1>
<div id="pagination" style='margin: 10px'>
<%= will_paginate @news_categories %>
</div>
<%- end %>

<%#= ActionController::Base.instance_methods.sort.join("\n") %>

<%= link_to 'Add New Category', { :action => 'new' } %>